	var strTitleName = c.theTitlesGrid.GetTitleName(nTitle);
	var a = c.theTitlesGrid.GetTitleCount();
	var b;
	if( a < 2 ) { b = " Title"; }
	else { b = " Titles"; }
    c.TitleCountText.text = a + b;
    c.MetaLine1.text = "";
    c.MetaLine2.text = "";
    c.MetaLine3.text = "";
    c.MetaLine4.text = "";
    c.MetaLine1a.text = "";
    c.MetaLine2a.text = "";
    c.MetaLine3a.text = "";
    c.MetaLine4a.text = "";
    c.MetaLine1.text = strTitleName;
    c.MetaLine1a.text = strTitleName;
}

